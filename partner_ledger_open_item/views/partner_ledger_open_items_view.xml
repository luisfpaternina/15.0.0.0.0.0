<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_account_move_line_filter_open_item" model="ir.ui.view">
        <field name="name">account.move.line.search.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter"/>
        <field name="priority">21</field>
        <field name="arch" type="xml">
            <xpath expr="filter[@name='to_check']" position="after">
                <filter string="Reconciled" 
                    domain="[('full_reconcile_id', '!=', False)]" 
                    help="Journal items where matching number is set" 
                    name="reconciled"/>
                <separator/>
                <filter string="Today"
                    name="today"
                    domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"
                     help="Show moves that create today"/>
            </xpath>
        </field>
    </record>
    <record id="action_account_moves_ledger_partner_open_item" model="ir.actions.act_window">
            <field name="context">{'journal_type':'general', 'search_default_group_by_partner': 1,
            'search_default_posted':1, 'search_default_payable':1, 'search_default_receivable':1,
            'search_default_reconciled':1, 'search_default_today': 1}</field>
            <field name="name">Partner Ledger Open Items</field>
            <field name="res_model">account.move.line</field>
            <field name="domain">[('display_type', 'not in', ('line_section', 'line_note'))]</field>
            <field name="view_id" ref="account.view_move_line_tree_grouped_partner"/>
            <field name="search_view_id" ref="account.view_account_move_line_filter"/>
            <field name="view_mode">tree,pivot,graph</field>
    </record>
     <menuitem id="menu_action_account_report_partner_ledger_open_items" 
              name="Partner Ledger Open Items" 
              action="action_account_moves_ledger_partner_open_item" 
              parent="account.menu_finance_entries_accounting_ledgers" 
              groups="account.group_account_readonly"/>
</odoo>